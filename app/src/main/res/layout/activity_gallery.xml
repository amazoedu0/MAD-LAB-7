<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Gallery">

    <Button
            android:text="Open Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/open_gallery"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.707" android:onClick="openGallery"/>
    <ImageView
            android:layout_width="326dp"
            android:layout_height="311dp" app:srcCompat="@android:drawable/ic_menu_report_image"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/open_gallery"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.843"/>
</androidx.constraintlayout.widget.ConstraintLayout>