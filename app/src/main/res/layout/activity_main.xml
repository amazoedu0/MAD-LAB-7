<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Open Map"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/button_map"
            app:layout_constraintTop_toBottomOf="@+id/button_web" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.502" android:onClick="openMap"/>
    <Button
            android:text="Open Website"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/button_web"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="244dp"
            app:layout_constraintHorizontal_bias="0.502" android:onClick="openWebsite"/>
    <Button
            android:text="Open Camera"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/button_camera"
            app:layout_constraintTop_toBottomOf="@+id/button_gallery" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.0"
            android:onClick="openCamera"/>
    <Button
            android:text="Open Gallery"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/button_gallery"
            app:layout_constraintTop_toBottomOf="@+id/button_map" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.502" android:onClick="openGallery"/>
</androidx.constraintlayout.widget.ConstraintLayout>