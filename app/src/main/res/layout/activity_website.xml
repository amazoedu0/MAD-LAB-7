<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Website">

    <EditText
            android:layout_width="299dp"
            android:layout_height="62dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/link_text"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.37"
            android:hint="www.something.com" android:textAlignment="center"/>
    <Button
            android:text="Open Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_link_open"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/link_text"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.065"
            android:onClick="openSite"/>
</androidx.constraintlayout.widget.ConstraintLayout>